<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="CucumberSuite" parallel="tests" thread-count="5">
    <test name="CucumberTests-Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.elpais.runners.CucumberTestRunner"/>
        </classes>
    </test>

    <test name="CucumberTests-Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.elpais.runners.CucumberTestRunner"/>
        </classes>
    </test>

    <test name="CucumberTests-Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.elpais.runners.CucumberTestRunner"/>
        </classes>
    </test>

    <test name="CucumberTests-iPhone">
        <parameter name="browser" value="iphone"/>
        <classes>
            <class name="com.elpais.runners.CucumberTestRunner"/>
        </classes>
    </test>

    <test name="CucumberTests-Android">
        <parameter name="browser" value="android"/>
        <classes>
            <class name="com.elpais.runners.CucumberTestRunner"/>
        </classes>
    </test>
</suite>
